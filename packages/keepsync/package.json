{
  "name": "@tonk/keepsync",
  "version": "0.3.4",
  "description": "A reactive sync engine framework for use with Tonk apps",
  "type": "module",
  "main": "./dist/node/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/node/index.js",
      "import": {
        "node": "./dist/node/index.js",
        "default": "./dist/index.js"
      },
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:browser && pnpm run build:node",
    "build:browser": "vite build --config vite.config.ts",
    "build:node": "vite build --config vite.config.ts --mode node",
    "dev": "vite build --config vite.config.ts --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "gts lint",
    "fix": "gts fix",
    "prepare": "pnpm run build",
    "pretest": "tsc --noEmit",
    "posttest": "pnpm run lint"
  },
  "keywords": [
    "tonk",
    "local-first",
    "sync",
    "real-time",
    "collaboration",
    "crdt",
    "automerge"
  ],
  "author": "Tonk",
  "license": "MIT",
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.19",
    "@types/node-fetch": "^2.6.9",
    "@types/react": "^19.0.10",
    "@types/ws": "^8.5.14",
    "fake-indexeddb": "^6.0.0",
    "gts": "^6.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "@automerge/automerge-repo-network-websocket": "^1.1.0",
    "@tonk/automerge-repo-fork": "^1.2.2",
    "bs58check": "^4.0.0",
    "chalk": "^5.4.1",
    "crypto-js": "^4.2.0",
    "node-fetch": "^3.3.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "zustand": "^5.0.3"
  }
}

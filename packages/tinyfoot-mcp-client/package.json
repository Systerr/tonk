{
  "name": "@tonk/tinyfoot-mcp-client",
  "version": "0.1.1",
  "description": "The tinyfoot MCP client",
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "bin": {
    "tinyfoot-mcp-client": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "gts clean & rimraf dist",
    "lint": "gts lint",
    "test": "vitest run",
    "server": "fastmcp dev mcp/index.ts",
    "prepublishOnly": "npm run build",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/chokidar": "^2.1.7",
    "chokidar": "^4.0.3",
    "express": "^4.21.2",
    "fastmcp": "^1.20.2",
    "typescript": "^5.3.3",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.5",
    "@types/node-fetch": "^2.6.4",
    "gts": "^6.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "ai",
    "tinyfoot",
    "local-first"
  ],
  "author": "tonk-labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonk-labs/tinyfoot.git",
    "directory": "packages/tinyfoot-mcp"
  },
  "bugs": {
    "url": "https://github.com/tonk-labs/tinyfoot/issues"
  },
  "homepage": "https://github.com/tonk-labs/tinyfoot#readme"
}
